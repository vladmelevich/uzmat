# Django Settings
# Скопируйте этот файл в .env и заполните реальными значениями
# cp env.example .env

# SECURITY WARNING: keep the secret key used in production secret!
# Сгенерируйте новый ключ: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-change-in-production

# Debug mode (True для разработки, False для production)
DEBUG=True

# Разрешенные хосты (через запятую, без пробелов)
# Для production добавьте IP сервера и домен
# Пример для uzmat.uz: ALLOWED_HOSTS=localhost,127.0.0.1,109.199.127.149,uzmat.uz,www.uzmat.uz
ALLOWED_HOSTS=localhost,127.0.0.1,109.199.127.149,uzmat.uz,www.uzmat.uz

# CSRF trusted origins (через запятую, без пробелов)
# Для production добавьте домен с http и https
# Пример для uzmat.uz: CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000,http://109.199.127.149,https://uzmat.uz,https://www.uzmat.uz
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000,http://109.199.127.149,https://uzmat.uz,https://www.uzmat.uz

# Click Payment Settings
CLICK_SERVICE_ID=81723
CLICK_MERCHANT_ID=45447
CLICK_SECRET_KEY=your-click-secret-key-here
CLICK_MERCHANT_USER_ID=63140

# Яндекс.Почта Settings
YANDEX_EMAIL=your-email@yandex.ru
YANDEX_APP_PASSWORD=your-yandex-app-password-here
DEFAULT_FROM_EMAIL=your-email@yandex.ru
DEFAULT_FROM_NAME=Uzmat

# Database Settings для Docker
# В Docker используйте эти настройки:
DB_ENGINE=mysql
DB_NAME=uzmat
DB_USER=uzmat_user
DB_PASSWORD=uzmat_secure_password_change_me
DB_HOST=db
DB_PORT=3306

# MySQL Root Password (для docker-compose)
MYSQL_ROOT_PASSWORD=root_secure_password_change_me

# Redis (опционально, для production)
# REDIS_URL=redis://127.0.0.1:6379/1

# Django Superuser (создается автоматически при первом запуске)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@gmail.com
DJANGO_SUPERUSER_PASSWORD=12133

# Site URL для формирования ссылок в Telegram сообщениях и других местах
# Для production используйте полный URL с https://
# Пример: SITE_URL=https://uzmat.uz
SITE_URL=https://uzmat.uz

# Telegram Bot Settings
# Получите токен бота у @BotFather в Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
# ID канала (может быть @channel_username или числовой ID)
# Пример: TELEGRAM_CHANNEL_ID=@Uzmat_uz
TELEGRAM_CHANNEL_ID=@Uzmat_uz
# Включить/выключить отправку в Telegram (True/False)
TELEGRAM_ENABLED=True

# Версия статических файлов (меняйте при обновлении CSS/JS для сброса кэша)
STATIC_VERSION=2.6.0

